<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/style_listview_design">

    <LinearLayout
        android:id="@+id/lnrStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvwStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="STORE 1"
            android:textStyle="bold"
            style="@style/TextViewPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvwTemplatename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Template name"
            android:textStyle="italic"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvwPostingDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Posted: 01/14/2016 13:34"
            android:textStyle="italic|bold"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPreview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonTextBlue"
            android:text="PREVIEW"
            android:background="@drawable/btn_accent"
            android:onClick="previewOnClickEvent"/>

        <Button
            android:id="@+id/btnAudit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/ButtonTextBlue"
            android:text="AUDIT"
            android:background="@drawable/btn_primary"
            android:onClick="auditOnClickEvent"/>

    </LinearLayout>

</LinearLayout>